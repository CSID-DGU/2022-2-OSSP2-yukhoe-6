  <body>
    <%- include('../partials/nav') %>
    <div style="margin-top: 30px;">
        <h2 style="font-weight: bold; color: #707070;margin-left: 20%;">공모전 작성하기</h2>
    </div>

    <!-- 1. 절대경로
    2. 맨앞에 /를 써주면 / 이전은 localhost:3000 -->
    <div class="wrap">
        <div class="square">

            <form action="/competitions/edit/<%= competition._id %>?_method=put" method="post">
                <!-- localhost3000/competitions/create/submit -->
                <div class="text">내용:      
                    <input class="input" type="text" name="title" value="<%= competition.title %>"><br>
                </div>

                <div class="text">마감일:     
                    <input class="input" type="date" name="deadLine" value="<%= competition.deadLine %>"><br>
                </div>

                <div style="display: inline;">
                    <div class="text" style="margin-bottom: 5px;">내용</div>
                    <div class="text">
                        <textarea class="input" style="width:400px; height:150px; border: solid 2px #707070; border-radius: 7px;" type="text" name="content"><%= competition.content %></textarea>
                    </div>
                </div>

                <div class="text">공모전 url:   
                    <input class="input" type="text" name="url" value="<%= competition.url %>"><br>
                </div>
                
                <div style="display:inline; text-decoration: none; margin-top: 20px;">

                    <input  class="button" type="submit" style= "width:200px; height:40px; left: 430px;" value="수정완료">

                    <form class="button" action="/competitions/delete/<%= competition._id %>?_method=delete" method="post">
                        <input type="submit" 
                        style= "color: #fff; text-decoration: none; width:200px; height:40px; background-color: #a6bf82; border: solid 3px #a6bf82; border-radius: 8px;" value="공모전 삭제하기">
                    </form>

                </div>
            </form>
        </div>
    </div>

